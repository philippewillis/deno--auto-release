{
  "version": "0.0.0",
  "tasks": {
    "dev": "deno run --allow-net --watch src/main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "hono": "npm:hono@^4.7.11",
    "~/": "./src/"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "./src",
      "./tools"
    ],
    "exclude": []
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "types": [
      "node"
    ],
    "strict": true
  }
}